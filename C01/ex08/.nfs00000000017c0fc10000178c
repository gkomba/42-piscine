#include <unistd.h>
#include <stdio.h>

void	ft_sort_int_tab(int *tab, int size)
{
	int	save;
	int	aux;

	while (size >= '0')
	{
		aux = '0';
		while (aux < size -1)
		{
			if(tab[aux] > tab[aux + 1])
			{
				save = tab[aux];
				tab[aux] = tab[aux + 1];
				tab[aux + 1] = save;
			}
			aux++;
		}
		size--;
	}
}

int main()
{
	int tab[] = {5, 6, 4, 8, 7, 1};
	int size = 6;
	int i;

	ft_sort_int_tab(tab, size);
	printf("%d, %d, %d, %d, %d, %d", tab[0], tab[1], tab[2], tab[3], tab[4], tab[5], tab[6]);
	return 0;
}

